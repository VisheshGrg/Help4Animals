<% layout('layout/boilerplate') %>

<h1 style="margin-bottom: 30px;">All Shelters</h1>

<% for(let shelter of shelters){ %>
    <div class="card mb-5" style="height: auto">
        <div class="row">
            <div class="col-md-4">
                <% if(shelter.images.length>=1){ %>
                    <img class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;" src="<%= shelter.images[0].url %>" alt="shelter image">
                <% } else { %>
                    <img class="img-fluid" src="https://t4.ftcdn.net/jpg/04/73/25/49/360_F_473254957_bxG9yf4ly7OBO5I0O5KABlN930GwaMQz.jpg" alt="no image">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title" style="margin-bottom: 15px;"><%= shelter.sheltername %></h5>
                    <p class="card-text">
                        <small class="text-muted"><%= shelter.location %></small>
                    </p>
                    <% if(shelter.description){ %>
                        <p class="card-text"><%= shelter.description %></p>
                    <% } %>
                    <p class="card-text">
                        <small class="text-muted"><%= shelter.contact %></small>
                    </p>
                    <a class="btn btn-primary" href="#">View <%= shelter.sheltername %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>